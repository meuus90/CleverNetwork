<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:background="@color/overlay_dark_60">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/v_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:paddingStart="35dp"
            android:paddingTop="20dp"
            android:paddingEnd="35dp"
            android:paddingBottom="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reactive_text_bottom_line"
                android:textColorHint="@color/grey_text_hint"
                app:boxBackgroundMode="none"
                app:hintTextAppearance="@style/TemplateInputHintText"
                app:hintTextColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent"
                    android:hint="@string/sign_id_hint"
                    android:lineSpacingExtra="6sp"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reactive_text_bottom_line"
                android:textColorHint="@color/grey_text_hint"
                app:boxBackgroundMode="none"
                app:hintTextAppearance="@style/TemplateInputHintText"
                app:hintTextColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTransparent"
                    android:hint="@string/sign_pw_hint"
                    android:lineSpacingExtra="6sp"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="8dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@color/colorPrimary"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:paddingStart="20dp"
                android:paddingTop="50dp"
                android:paddingEnd="20dp"
                android:paddingBottom="50dp"
                android:text="@string/ok"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
