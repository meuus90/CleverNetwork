<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    tools:background="@color/colorOverlayDark60">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:src="@drawable/ic_x"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/v_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="35dp"
        android:paddingTop="20dp"
        android:paddingEnd="35dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="9sp"
            android:textColor="#3f3f3f"
            android:textSize="20sp"
            tools:text="Investor CAP reached" />


        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="start"
            android:textColor="#3f3f3f"
            android:textSize="15sp"
            tools:text="In order to fully explore SA investment with higher CAP, you are required to upgrade your account to Accredited Investor." />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/h_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_h_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:paddingStart="5dp"
            android:paddingTop="14dp"
            android:paddingEnd="5dp"
            android:paddingBottom="13dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="@string/yes" />

        <View
            android:id="@+id/v_h_center_bar"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/primaryDarkColor" />

        <TextView
            android:id="@+id/tv_h_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:paddingStart="5dp"
            android:paddingTop="14dp"
            android:paddingEnd="5dp"
            android:paddingBottom="13dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="@string/no" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/v_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_v_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:paddingStart="5dp"
            android:paddingTop="14dp"
            android:paddingEnd="5dp"
            android:paddingBottom="13dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="@string/yes" />

        <View
            android:id="@+id/v_v_center_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/primaryDarkColor" />

        <TextView
            android:id="@+id/tv_v_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="2sp"
            android:paddingStart="5dp"
            android:paddingTop="14dp"
            android:paddingEnd="5dp"
            android:paddingBottom="13dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="@string/no" />
    </LinearLayout>
</LinearLayout>
